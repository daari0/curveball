<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.inipage.homelylauncher">

    <permission
        android:name="com.inipage.homelylauncher.RECEIVE_DATA_PERMISSION"
        android:icon="@mipmap/ic_launcher"
        android:label="This permission is used to ensure only Curveball Launcher can receive module data."
        android:protectionLevel="normal" />

    <uses-permission android:name="smartercardhome.inipage.com.usagehome.RECEIVE_DATA_PERMISSION" />
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- For analytics. -->
    <application
        android:name=".ApplicationClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name">
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/HomeTheme"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".icons.IconChooserActivity"
            android:label="@string/title_activity_icon_chooser"
            android:theme="@style/AppThemeDarkNoActionBar"></activity>
        <activity
            android:name=".SettingsActivity"
            android:label="Settings"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/SettingsTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.inipage.homelylauncher.HomeActivity" />
        </activity>

        <service
            android:name=".background.SequentialLauncherService"
            android:enabled="true"
            android:exported="false"></service>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="f6b8e457cb9e9aa8020703c8dfb39715d449ed3e" />

        <activity android:name=".DockTester"></activity>
    </application>

</manifest>