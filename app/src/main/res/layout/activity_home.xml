<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:fitsSystemWindows="false"
    android:clipToPadding="false"
    tools:context=".HomeActivity">

    <View
        android:id="@+id/statusBarBackdrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false"
        android:background="#A0000000"
        android:alpha="0" />

    <RelativeLayout
        android:id="@+id/rootLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <!-- An empty view whose purpose is just to manage the homescreen in response to drop
            events. -->
        <View
            android:id="@+id/dropListener"
            android:background="@android:color/transparent"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <com.inipage.homelylauncher.ShortcutGestureView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:id="@+id/sgv" />

        <!-- Snacklets "hint" -->
        <LinearLayout
            android:id="@+id/snackletsHint"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />

        <RelativeLayout
            android:id="@+id/timeDateContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:id="@+id/timeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_alignParentLeft="false"
                android:background="?android:attr/selectableItemBackground"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="false"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="12"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/black"
                    android:textSize="80sp"
                    android:shadowColor="#000"
                    android:shadowRadius="4"
                    android:shadowDy="2"/>

                <TextView
                    android:id="@+id/timeColon"
                    android:layout_toRightOf="@id/hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="false"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text=":"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/black"
                    android:textSize="58sp"
                    android:shadowColor="#000"
                    android:shadowRadius="4"
                    android:shadowDy="2"/>

                <TextView
                    android:id="@+id/minute"
                    android:layout_toRightOf="@+id/timeColon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="30"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/black"
                    android:textSize="80sp"
                    android:shadowColor="#000"
                    android:shadowRadius="4"
                    android:shadowDy="2"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/date"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timeLayout"
                android:text="Monday, June 3\nCharging 50%"
                android:layout_alignParentLeft="false"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/black"
                android:background="?android:attr/selectableItemBackground"
                android:textSize="18sp"
                android:layout_marginTop="-14dp"
                android:layout_marginLeft="0dp"
                android:layout_centerInParent="true"
                android:gravity="center_vertical|center_horizontal"
                android:shadowColor="#000"
                android:shadowRadius="4"
                android:shadowDy="2"/>

            <TextView
                android:id="@+id/alarm"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date"
                android:text="Next alarm at 8:30 P.M."
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/black"
                android:background="?android:attr/selectableItemBackground"
                android:textSize="14sp"
                android:layout_marginTop="-14dp"
                android:layout_centerInParent="true"
                android:gravity="center_vertical|center_horizontal"
                android:shadowColor="#000"
                android:shadowRadius="4"
                android:shadowDy="2"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:id="@+id/strayTouchShield"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <!-- All apps screen layout -->
        <RelativeLayout
            android:id="@+id/allAppsContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_alignParentTop="true"
            android:background="#d0ffffff">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_above="@+id/searchActionBar"
                android:background="@drawable/all_apps_bg">

                <!-- Layout for the suggestions box -->
                <TextView
                    android:layout_alignParentTop="true"
                    android:id="@+id/suggestionsLabel"
                    android:text="@string/suggestions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#111111"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp" />

                <TextView
                    android:layout_below="@+id/suggestionsLabel"
                    android:id="@+id/no_suggestions_right_now"
                    android:text="@string/no_suggestions_right_now"
                    android:textColor="#111111"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <HorizontalScrollView
                    android:layout_below="@+id/no_suggestions_right_now"
                    android:id="@+id/suggestionsScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none" >

                    <LinearLayout
                        android:id="@+id/suggestionsLayout"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center" />
                </HorizontalScrollView>

                <View
                    android:layout_below="@+id/suggestionsScrollView"
                    android:background="#000000"
                    android:id="@+id/suggestionsDivider"
                    android:layout_width="match_parent"
                    android:layout_height="2dp" />

                <!-- Layout for the apps grid (vertically scrolling list) -->
                <RelativeLayout
                    android:id="@+id/allAppsLayoutContainer"
                    android:layout_below="@+id/suggestionsDivider"
                    android:layout_above="@+id/appsDivider"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/allAppsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="vertical" />

                </RelativeLayout>

                <View
                    android:layout_above="@+id/scrollerContainer"
                    android:background="#000000"
                    android:id="@+id/appsDivider"
                    android:layout_width="match_parent"
                    android:layout_height="2dp" />

                <RelativeLayout
                    android:id="@+id/scrollerContainer"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp">

                        <TextView
                            android:id="@+id/startLetter"
                            android:layout_alignParentLeft="true"
                            android:text="A"
                            android:layout_centerVertical="true"
                            android:textColor="#111111"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:layout_width="30dp"
                            android:layout_height="32dp" />

                        <RelativeLayout
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/startLetter"
                            android:layout_toLeftOf="@+id/endLetter"
                            android:layout_width="match_parent"
                            android:layout_height="32dp">

                            <View
                                android:background="#111111"
                                android:layout_centerVertical="true"
                                android:layout_width="match_parent"
                                android:layout_height="2dp" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/endLetter"
                            android:layout_alignParentRight="true"
                            android:text="Z"
                            android:layout_centerVertical="true"
                            android:textColor="#111111"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:layout_width="30dp"
                            android:layout_height="32dp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/searchActionBar"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_vertical"
                android:visibility="visible"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp" >

                <ImageView
                    android:id="@+id/backToHome"
                    android:layout_alignParentLeft="true"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_keyboard_arrow_down_grey_900_36dp"
                    android:layout_marginRight="8dp"
                    android:padding="4dp" />

                <EditText
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_toRightOf="@+id/backToHome"
                    android:layout_toLeftOf="@+id/clearSearch"
                    android:hint="@string/search_hint"
                    android:textSize="18sp"
                    android:textColor="#111111"
                    android:id="@+id/searchBox"
                    android:singleLine="true"
                    android:visibility="visible"
                    android:textColorHint="#666666"
                    android:layout_centerVertical="true"
                    android:imeOptions="actionGo"
                    android:gravity="center_vertical" />

                <ImageView
                    android:id="@+id/moreOptions"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/ic_settings_grey_900_36dp"
                    android:layout_marginRight="8dp"
                    android:padding="4dp" />

                <ImageView
                    android:id="@+id/clearSearch"
                    android:layout_toLeftOf="@+id/moreOptions"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/ic_close_grey_900_36dp"
                    android:visibility="gone"
                    android:padding="4dp" />
            </RelativeLayout>
        </RelativeLayout>

        <com.inipage.homelylauncher.views.DragToOpenView
            android:id="@+id/dockBar"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent">

            <!-- Home screen mode -->
            <LinearLayout
                android:id="@+id/dockApps"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/dockApp1"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:padding="4dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:visibility="visible"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" >
                </View>

                <ImageView
                    android:id="@+id/dockApp2"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:padding="4dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_gravity="center_vertical"
                    android:visibility="visible" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" >
                </View>

                <ImageView
                    android:id="@+id/dockApp3"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:padding="4dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:visibility="visible"
                    android:layout_gravity="center_vertical" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" >
                </View>

                <ImageView
                    android:id="@+id/dockApp4"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:padding="4dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:visibility="visible"
                    android:layout_gravity="center_vertical" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" >
                </View>

                <ImageView
                    android:id="@+id/dockApp5"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:padding="4dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:visibility="visible"
                    android:layout_gravity="center_vertical"/>

                <View
                    android:id="@+id/fiveToSix"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" >
                </View>

                <ImageView
                    android:id="@+id/dockApp6"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:padding="4dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:visibility="visible"
                    android:layout_gravity="center_vertical" />

                <View
                    android:id="@+id/sixToSeven"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" >
                </View>

                <ImageView
                    android:id="@+id/dockApp7"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:padding="4dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:visibility="visible"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="16dp" />
            </LinearLayout>

            <!-- Icon drop mode -->
            <LinearLayout
                android:id="@+id/dropLayout"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_gravity="center_vertical"
                android:padding="8dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:visibility="visible" >
                <RelativeLayout
                    android:id="@+id/appDropIcons"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <LinearLayout
                        android:id="@+id/uninstallApp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_delete_white_48dp" />
                        <TextView
                            android:layout_marginLeft="3dp"
                            android:text="@string/uninstall"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:gravity="center_vertical"
                            android:textSize="14sp"
                            android:textColor="@android:color/white"
                            android:shadowColor="#000"
                            android:shadowRadius="4"
                            android:shadowDy="2"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/appInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_info_white_48dp" />
                        <TextView
                            android:layout_marginLeft="3dp"
                            android:text="@string/app_info"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:gravity="center_vertical"
                            android:textSize="14sp"
                            android:textColor="@android:color/white"
                            android:shadowColor="#000"
                            android:shadowRadius="4"
                            android:shadowDy="2"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/addToDock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">
                        <ImageView
                            android:src="@drawable/ic_add_circle_outline_white_48dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />
                        <TextView
                            android:layout_marginLeft="3dp"
                            android:text="@string/add_to_dock"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:gravity="center_vertical"
                            android:textSize="14sp"
                            android:shadowColor="#000"
                            android:shadowRadius="4"
                            android:shadowDy="2"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </com.inipage.homelylauncher.views.DragToOpenView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/widgetOverlay"
        android:background="#a0000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/widget_overlay_bg">

            <RelativeLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/widgetOverlayIcon"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_now_widgets_white_48dp"/>

                <ImageView
                    android:id="@+id/widgetOverlayClose"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_close_white_48dp"/>

                <ImageView
                    android:id="@+id/widgetOverlaySettings"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_toLeftOf="@+id/widgetOverlayClose"
                    android:layout_marginRight="8dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_settings_white_48dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#a0ffffff" />

            <!-- Where the widgets go. Only one should be visible at once! -->
            <LinearLayout
                android:id="@+id/widgetOverlayDisplay"
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:text="A"
        android:background="@drawable/quick_scroll_bg"
        android:id="@+id/popup"
        android:textSize="48sp"
        android:textColor="#101010"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:visibility="gone" />
</RelativeLayout>